{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/*",
        "webpack://./pages/*": "${workspaceFolder}/pages/*",
        "webpack://./app/*": "${workspaceFolder}/app/*",
        "webpack://./src/*": "${workspaceFolder}/src/*"
      }
    },
    {
      "name": "Next.js: debug client-side (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/*",
        "webpack://./pages/*": "${workspaceFolder}/pages/*",
        "webpack://./app/*": "${workspaceFolder}/app/*",
        "webpack://./src/*": "${workspaceFolder}/src/*"
      }
    },
    {
      "name": "Next.js: debug client-side (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "reAttach": true,
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Next.js: debug full stack (production)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["start"],
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Next.js: attach to running process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "name": "Next.js: debug build process",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run build",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Next.js: debug tests",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run test",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js: debug full stack (compound)",
      "configurations": [
        "Next.js: debug server-side",
        "Next.js: debug client-side"
      ],
      "stopAll": true
    }
  ]
}